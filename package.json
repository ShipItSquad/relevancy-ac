{
  "name": "relevancy-ac",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "convex": "^1.27.0",
      "@types/node": "^22.13.13",
      "typescript": "^5.8.3"
    }
  },
  "scripts": {
    "check": "oxlint",
    "prepare": "husky",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
    "dev:apps": "turbo run dev -F web -F slack-ai",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @relevancy-ac/backend dev",
    "dev:setup": "turbo -F @relevancy-ac/backend dev:setup"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.12.0",
    "turbo": "^2.5.4",
    "ultracite": "6.3.3"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint"
  },
  "packageManager": "bun@1.3.0"
}
